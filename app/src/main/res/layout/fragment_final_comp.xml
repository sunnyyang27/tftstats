<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <HorizontalScrollView
            android:id="@+id/champ_table_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical">
            <TableLayout
                android:id="@+id/champ_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TableLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/add_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_row"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/champ_table_scroll"/>
    </RelativeLayout>

    <Button
        android:id="@+id/finish_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_game"
        android:onClick="onFinishGameClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>